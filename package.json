{
  "name": "@illuxiza/nanostores-immer",
  "version": "0.1.0",
  "description": "Immer integration for nanostores, providing immutable state updates with mutable syntax",
  "keywords": [
    "store",
    "state",
    "state manager",
    "immer",
    "immutable",
    "react",
    "react native",
    "preact",
    "vue",
    "svelte"
  ],
  "scripts": {
    "test:lint": "eslint .",
    "test:coverage": "c8 pnpm bnt",
    "test:types": "check-dts",
    "test": "pnpm run /^test:/"
  },
  "author": "illuxiza",
  "license": "MIT",
  "repository": "illuxiza/nanostores-immer",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "peerDependencies": {
    "immer": "^10.0.0",
    "nanostores": "^1.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^55.2.0",
    "@sinonjs/fake-timers": "^14.0.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^22.14.0",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "benchmark": "^2.1.4",
    "better-node-test": "^0.7.1",
    "c8": "^10.1.3",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.1.0",
    "eslint": "^9.24.0",
    "nanodelay": "^2.0.2",
    "size-limit": "^11.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "deprecated",
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}
